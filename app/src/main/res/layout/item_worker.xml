<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_worker_background"
    android:layout_marginRight="@dimen/xxsmall_padding"
    android:layout_marginLeft="@dimen/xxsmall_padding"
    android:layout_marginBottom="@dimen/xsmall_margin"
    android:padding="@dimen/xxsmall_padding">

    <ImageView
        android:id="@+id/ivOompaLoompa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_worker_image_height"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOompaLoompa"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"/>

    <TextView
        android:id="@+id/tvProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"/>

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfession"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"/>

</RelativeLayout>